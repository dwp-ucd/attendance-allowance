{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}

  {% set specialRulesBody %}
    <p class="govuk-body govuk-hint"> 
      An SR1 is a form that gives the Department for Work and Pensions evidence about your illness. 
    </p>
  {% endset %}

  {{ govukRadios({
    idPrefix: "special-rules-form",
    name: "special-rules-form",
    classes: "govuk-!-margin-bottom-3",
    fieldset: {
      legend: {
        text: "Has your doctor, consultant or specialist nurse completed an SR1 form?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-4"
      }
    },
    errorMessage: data.validation['special-rules-form'].error,
    hint: {
      html: specialRulesBody
    },
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["special-rules-form"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["special-rules-form"] === "no"
      },
      {
        value: "unsure",
        text: "I do not know",
        checked: true if data["special-rules-form"] === "unsure"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}